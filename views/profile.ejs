<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
<div class="w-full min-h-screen bg-zinc-900 text-white p-10">
    <div class="flex w-full bg-blue-500 rounded-md overflow-hidden px-3 py-2 text-xl justify-between">
        <div class="px-4">
            <a href="/CreatePost" class="hover:bg-black transition-colors duration-500 rounded px-1 py-1">Create Post</a>
        </div>
        <div>Your Profile</div>
        <div class="flex justify-between gap-x-10 px-4">
            <a href="/Logout" class="hover:bg-black transition-colors duration-500 rounded px-1 py-1">Logout</a>
            <a href="/feed" class="hover:bg-black transition-colors duration-500 rounded px-1 py-1">Back</a>
        </div>
    </div>
    
    <% if(posts.length == 0) { %>
        <h1 class="3xl"> No Posts</h1>
    <% } else { %>
        <h1>Your Posts</h1>
        <% posts.forEach(element => { %>
            <div class="max-w-sm w-80 bg-white rounded-lg shadow-md overflow-hidden mt-10">
                <!-- Post Header -->
                 <div class="flex justify-between">
                <div class="px-6 py-4">
                    <h2 class="text-2xl font-semibold text-gray-800"><%= element.title %></h2>
                    <p class="text-sm text-gray-500">Published by <span class="font-bold text-gray-700"><%= element.user.username %></span></p>
                </div>
                <div class="text-zinc-400 mt-2 mx-2">
                    <a href="/EditPost/<%= element.id %>" class="">EditPost</a>

                </div>
            </div>
                
                <!-- Post Content -->
                <div class="px-6 py-4">
                    <p class="text-gray-700 text-base">
                        <% if (element.content.length < 100) { %>
                            <%= element.content %>
                        <% } else { %>
                            <%= element.content.substring(0, 100) %>...
                        <% } %>
                    </p>
                </div>
                
                <!-- Footer (Optional) -->
                <div class="px-6 py-4 text-blue-500 flex justify-between items-center text-zinc-400">
                    
                    <h1 class="text-zinc-400">Likes : <%= element.likes.length %></h1>
                    <a class="hover:underline" href="/postshow/<%= element._id %>">Read More</a>
                    <a href="/like/<%= element.id %>" class="py-2 px-4 rounded outline-none transition-all duration-500 ease-in-out hover:outline-blue-500 hover:outline-4">Like</a>
                </div>
            </div>
        <% }) %>
    <% } %>
</div>

<script src="/scripts/script.js"></script>
</body>
</html>
